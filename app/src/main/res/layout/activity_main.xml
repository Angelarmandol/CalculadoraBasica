<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignWithParentIfMissing="false"
    android:layout_centerHorizontal="false"
    android:layout_marginEnd="0dp"
    android:layout_marginStart="0dp"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:isScrollContainer="false"
    android:paddingBottom="0dp"
    android:soundEffectsEnabled="false"
    android:visibility="visible"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numero1"
        android:layout_toStartOf="@+id/numero1"
        android:text="Resultado" />

    <Button
        android:id="@+id/btn_Suma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="115dp"
        android:text="Suma" />

    <Button
        android:id="@+id/btn_Resta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn_Suma"
        android:layout_marginStart="180dp"
        android:text="Resta" />

    <Button
        android:id="@+id/btn_Divi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/numero1"
        android:layout_alignTop="@+id/btn_Multi"
        android:text="Division" />

    <Button
        android:id="@+id/btn_Multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/numero2"
        android:layout_below="@+id/btn_Resta"
        android:text="MultiplicaciÃ³n" />

    <EditText
        android:id="@+id/numero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_Suma"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:inputType="numberSigned"
        tools:text="Dato 2" />

    <EditText
        android:id="@+id/numero1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_Resta"
        android:layout_alignTop="@+id/numero2"
        android:inputType="numberSigned"
        tools:text="Dato 1" />

</RelativeLayout>